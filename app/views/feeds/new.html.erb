<div class="row">
  <div class="col-lg-12">
    <h1>Add Feed</h1>
    <%= form_for(@feed, html: { role: 'form' }) do |f| %>
      <%= render partial: 'shared/errors', locals: { errors: @feed.errors } %>
      <div class="row">
        <div class="form-group col-md-6">
          <%= f.label :url %>
          <%= f.text_field :url, :autofocus => true, placeholder: 'URL', class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <div class="text-right">
            <%= link_to 'Cancel', feeds_path, class: 'btn btn-default' %>
            <%= f.submit :class => 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
